    "vim.insertModeKeyBindings": [
        {
            "before": [
                "<up>"
            ],
            "after": [
                "Esc"
            ]
        },
        {
            "before": [
                "<down>"
            ],
            "after": [
                "Esc"
            ]
        },
        {
            "before": [
                "<left>"
            ],
            "after": [
                "Esc"
            ]
        },
        {
            "before": [
                "<right>"
            ],
            "after": [
                "Esc"
            ]
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "<space>",
                "w"
            ],
            "after": [
                "<leader>",
                "<leader>",
                "w"
            ]
        },
        {
            "before": [
                "<space>",
                "e"
            ],
            "after": [
                "<leader>",
                "<leader>",
                "e"
            ]
        },
        {
